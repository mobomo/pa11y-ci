{
    "defaults": {
        "chromeLaunchConfig": {
            "args": [
                "--no-sandbox"
            ]
        },
        "reporters": [
            ["pa11y-ci-reporter-html", { "destination": "/app/reports", "includeZeroIssues": true }],
            ["json", { "fileName": "/app/reports/report.json"}]
        ],
        "timeout": 30000,
        "viewport": {
            "width": 320,
            "height": 480
        }
    },
    "urls": [
        "https://pa11y.org/",
        "https://pa11y.org/contributing",
        "https://mobomo.com/"
    ]
}
